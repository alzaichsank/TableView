<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/text_color_white_soft"
    tools:context=".ShowTableActivity">

    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This onluy  show table"
        />

    <TableLayout
        android:id="@+id/tabel1"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:stretchColumns="*"
        >
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundtableheader">
            <TextView
                android:text="No"
                android:layout_gravity="center"
                android:textColor="@color/text_white"
                android:padding="4dp"
                android:textSize="14dp"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider" />
            </LinearLayout>
            <TextView
                android:text="header1"
                android:textColor="@color/text_white"
                android:layout_gravity="center"
                android:padding="4dp"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="header2"
                android:textColor="@color/text_white"
                android:textSize="14dp" />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider_invisible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider" />
            </LinearLayout>
            <TextView
                android:text="detail_header"
                android:layout_gravity="center"
                android:textColor="@color/text_white"
                android:padding="4dp"
                android:textSize="14dp"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider_invisible" />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:background="@drawable/backgroundtable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/detail_date"
                android:text="-"
                android:layout_gravity="center"
                android:textColor="@color/text_black"
                android:padding="4dp"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider" />
            </LinearLayout>
            <TextView
                android:id="@+id/detail_in"
                android:text="-"
                android:layout_gravity="center"
                android:textColor="@color/text_black"
                android:padding="4dp"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/detail_out"
                android:text="-"
                android:layout_gravity="center"
                android:textColor="@color/text_black"
                android:padding="4dp"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider_invisible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider" />
            </LinearLayout>
            <TextView
                android:id="@+id/detail_hours"
                android:text="-"
                android:layout_gravity="center"
                android:textColor="@color/text_black"
                android:padding="4dp"
                android:textSize="12sp"
                />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:background="@drawable/backgroundtable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:layout_gravity="center"
                android:textColor="@color/text_black"
                android:padding="4dp"
                android:textSize="12sp"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider_invisible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider_invisible" />
            </LinearLayout>

            <TextView
                android:text="Total"
                android:layout_gravity="center"
                android:textColor="@color/text_black"
                android:padding="4dp"
                android:textSize="14dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider_invisible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent" >
                <View style="@style/Divider" />
            </LinearLayout>
            <TextView
                android:id="@+id/detail_day"
                android:text="-"
                android:layout_gravity="center"
                android:textColor="@color/text_black"
                android:padding="4dp"
                android:textSize="12sp"
                />
        </TableRow>

    </TableLayout>
</RelativeLayout>